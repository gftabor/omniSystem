<launch>
  <machine
     name="omni"
     default="never"
     address="10.42.0.2" user="ashkan"
     password="Ashipouri"
     env-loader="/home/ashkan/catkin_ws/src/omniSystem/launch/omniMachine.env"
  />

  <node type="omni_node" name="omni_node" pkg="omniSystem" machine="omni" output="log" />
 <!-- <node type="camera_node" name="camera_node" pkg="omniSystem" machine="omni" output="screen" respawn="true"/>-->


  <arg name="camera_name"               default="camera" />
  <arg name="camera_serial"             default="16130486" />
  <arg name="calibrated"                default="0" />

  <!-- When unspecified, the driver will use the default framerate as given by the
      camera itself. Use the parameter 'control_frame_rate' to enable manual frame 
      rate control, and 'frame_rate' to set the frame rate value. -->
  <arg name="control_frame_rate"        default="true" />
  <arg name="frame_rate"                default="25" />

 <!-- <node pkg="image_view" type="image_view" name="image_view" args="image:=/camera/image_rect"/>-->

  <group ns="original_camera">
    <!-- Nodelet manager -->
    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" cwd="node" output="screen" machine="omni" />

    <!-- Camera nodelet -->
    <node pkg="nodelet" type="nodelet" name="spinnaker_camera_nodelet" machine="omni" 
          args="load spinnaker_camera_driver/SpinnakerCameraNodelet camera_nodelet_manager" >

      <param name="frame_id"                        value="camera" />
      <param name="serial"                          value="$(arg camera_serial)" />

      <!-- Frame rate -->
      <param name="acquisition_frame_rate_enable"   value="$(arg control_frame_rate)" />
      <param name="acquisition_frame_rate"          value="$(arg frame_rate)" />

      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" />
    </node>

  <node pkg="nodelet" type="nodelet"
        args="load image_proc/crop_decimate camera_nodelet_manager"
        name="my_decimator" machine="omni" >
    <param name="x_offset" type="int" value="384" />
    <param name="y_offset" type="int" value="664" />
    <param name="width" type="int" value="1280" />
    <param name="height" type="int" value="720" />
    <remap from="camera/image_raw" to="/original_camera/image_mono"/>
    <remap from="camera/image_info" to="/original_camera/camera_info"/>

  <!-- remap output topics -->
    <remap from="camera_out/image_raw" to="/camera/image_mono"/>
    <remap from="camera_out/image_info" to="/camera/camera_info"/>
  </node>

    <!-- Debayering nodelet -->
    <node pkg="nodelet" type="nodelet" name="image_proc_debayer" machine="omni" 
          args="load image_proc/debayer camera_nodelet_manager">
    </node>

        <!-- Debayering nodelet -->
    <node pkg="nodelet" type="nodelet" name="image_proc_rectify" machine="omni" 
          args="load image_proc/rectify camera_nodelet_manager">
          <remap from="image_mono" to="/camera/image_mono"/>
          <remap from="image_info" to="/camera/camera_info"/>
          <remap from="image_rect" to="/camera/image_rect"/>

    </node>
  
  </group> 

</launch>