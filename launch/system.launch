<launch>
   
  <node pkg="tf" type="static_transform_publisher" name="center_broadcaster" args="0 0 0.34 0 0 0 camera center 10" />
  
  <node pkg="tf" type="static_transform_publisher" name="camera_broadcaster" args="0 0 0 0 3.14 0 world camera 10" />

  <node pkg="tf" type="static_transform_publisher" name="omni0_broadcaster" args="0.50 0.30 -0.25 0 0 3.14 center omni0 10" />

  <node pkg="tf" type="static_transform_publisher" name="omni1_broadcaster" args="0.120 0.120 0.150 3.14 -3.14 0 center omni1 10" />

  <node pkg="tf" type="static_transform_publisher" name="omni2_broadcaster" args="-0.120 0.120 0.15 3.14 -3.14 0 center omni2 10" />

  <node pkg="tf" type="static_transform_publisher" name="omni3_broadcaster" args="-0.120 -0.120 0.15 0 -3.14 0 center omni3 10" />

  <node pkg="tf" type="static_transform_publisher" name="omni4_broadcaster" args="0.12 -0.120 0.15 0 -3.14 0 center omni4 10" />

  <node pkg="tf" type="static_transform_publisher" name="object_broadcaster" args="0 0 0 0 0 0 marker_id18 object 10" />

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find omniSystem)/rviz/config_file.rviz" />
  <node type="rvizStuff" name="rvizStuff" pkg="omniSystem" />
  <include file="$(find omniSystem)/launch/hardware.launch" />
 <!-- <include file="$(find omniSystem)/launch/camera.launch" />-->

  <arg name="camera" default="/camera/image_mono" />
  <arg name="camera_info" default="/camera/camera_info" />
  <arg name="tf_prefix" default="marker_id" />
  <arg name="show_detections" default="true" />
  <arg name="marker_size" default="0.03" doc="length of the physical marker's side in meters"/>
  <arg name="aruco_dictionary" default="DICT_6X6_250" />
  <node pkg="omniSystem" type="simple_aruco_detector_node" name="simple_aruco_detector" output="screen">
      <param name="camera" type="string" value="$(arg camera)"/>
      <param name="camera_info" type="string" value="$(arg camera_info)"/>
      <param name="tf_prefix" type="string" value="$(arg tf_prefix)"/>
      <param name="show_detections" type="bool" value="$(arg show_detections)"/>
      <param name="marker_size" type="double" value="$(arg marker_size)"/>
      <param name="aruco_dictionary" type="string" value="$(arg aruco_dictionary)"/>
      <param name="enable_blur" type="bool" value="false"/>
      <param name="blur_window_size" type="int" value="7"/>
      <param name="aruco_adaptiveThreshWinSizeStep" type="int" value="10"/>
  </node>

</launch>